<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >


    <TextView
        android:text="Nombre"
        android:textColor="#ffffff"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="#0B243B"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tvNombre"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dip"
        android:layout_height="200dip"
        app:srcCompat="@android:drawable/star_big_off"
        android:id="@+id/imgdialog"
        android:layout_below="@+id/tvNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvprecio"
        android:layout_below="@+id/imgdialog"
        android:layout_marginTop="12dp"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="#0B243B"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Seleccionar y continuar"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndismissdialog"
        android:layout_marginBottom="10dip"
        android:layout_below="@+id/tvprecio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <View
        android:background="#585858"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_alignTop="@+id/tvprecio"
        android:layout_alignParentStart="true" />

</RelativeLayout>