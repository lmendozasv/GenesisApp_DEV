<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_item_add_department"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.AddItemsFunction.NewItemAddDepartment"
    tools:showIn="@layout/activity_new_item_add_department">

    <TextView
        android:text="Seleccione el departamento y la categoría del producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#906E6E6E"
        android:textColor="#ffffff"
        android:textSize="30dip"
        android:gravity="center"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:id="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:id="@+id/spinner"
        android:background="#A9E2F3"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/grd_gen_view"
        android:layout_height="1dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"></View>

    <TextView
        android:text="Categoría"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="60dp"
        android:id="@+id/textView8"
        android:background="#906E6E6E"
        android:textColor="#ffffff"
        android:textSize="30dip"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="41dp"
        android:id="@+id/spncat"
        android:background="#81DAF5"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bk_gen"
        android:id="@+id/imageView3"
        android:alpha=".1"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="wrap_content"
        android:background="@drawable/grd_gen_view"
        android:layout_height="1dp"
        android:layout_below="@+id/spncat"
        android:layout_alignParentStart="true"></View>
</RelativeLayout>
