<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_identify_by_upc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.NewItemPackage.IdentifyByUPCActivity"
    tools:showIn="@layout/activity_identify_by_upc">


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    >


    <TextView
        android:text="UPC"
        android:layout_width="wrap_content"
        android:gravity="center"

        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:layout_marginTop="20dip"
        android:id="@+id/txtUPC"
        android:layout_below="@+id/txtPrice"
        android:layout_alignStart="@+id/txtPrice"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:id="@+id/ivProduct"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/txtName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="InformaciÃ³n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20dip"

        android:gravity="center"
        android:layout_marginTop="30dip"
        android:layout_below="@+id/ivProduct"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Price"
        android:layout_marginTop="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"

        android:gravity="left"
        android:id="@+id/txtPrice"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/txtName"
        android:textSize="25dip"
        android:layout_marginBottom="20dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <View
        android:background="#585858"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_above="@+id/ivProduct"
        android:layout_alignParentStart="true" />

    <View android:background="#585858"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ivProduct"
        android:layout_marginTop="20dip"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUPC"
        android:layout_alignParentStart="true"
        android:id="@+id/txtall"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

</ScrollView>