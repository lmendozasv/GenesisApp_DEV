<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_pricing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.NewItems.PricingActivity"
    tools:showIn="@layout/activity_pricing">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bk_gen"
        android:id="@+id/imageView5"
        android:alpha=".5"

        />

    <TextView
        android:text="Descuentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView16"
        android:gravity="center"

        android:layout_marginTop="50dip"
        android:textSize="30dip"
        android:background="#90ffffff"
        android:textColor="#194B7E"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ListView android:id="@+id/MyList" android:layout_height="fill_parent"
        android:layout_width="fill_parent" android:descendantFocusability="beforeDescendants"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView16">
    </ListView>

</RelativeLayout>
