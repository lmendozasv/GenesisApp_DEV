<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_brand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.NewItems.BrandActivity"
    tools:showIn="@layout/activity_brand">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bk_gen"
        android:id="@+id/imageView5"
        android:alpha=".5"

        />

    <TextView
        android:text="Ingrese o seleccione la marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView16"
        android:gravity="center"

        android:layout_marginTop="50dip"
        android:textSize="30dip"
        android:background="#90ffffff"
        android:textColor="#194B7E"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <sv.devla.genesisapp.Search.CustomAutoCompleteView
        android:id="@+id/customAutoCompleteView"
        android:layout_width="fill_parent"

        android:completionThreshold="1"

        android:textSize="20dip"

        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"

        android:hint="Por ejemplo: Fisher Price"
        android:layout_marginTop="54dp"
        android:layout_height="55dp"
        android:padding="10dip"
        android:background="@drawable/ic_edittextbk"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"></sv.devla.genesisapp.Search.CustomAutoCompleteView>
</RelativeLayout>
