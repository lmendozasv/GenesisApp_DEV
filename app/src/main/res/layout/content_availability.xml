<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_availability"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.AddItemsFunction.AvailabilityActivity"
    tools:showIn="@layout/activity_availability">

    <TextView
        android:text="Plataformas electrónicas habilitadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="30dip"
        android:background="#906E6E6E"
        android:textColor="#ffffff"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Aplicación móvil clientes minoristas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:textSize="15dip"
        android:id="@+id/checkBox"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Aplicación móvil clientes mayoristas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:textSize="15dip"
        android:layout_alignStart="@+id/checkBox"
        android:id="@+id/checkBox2"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Tienda en línea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:textSize="15dip"
        android:layout_alignStart="@+id/checkBox2"
        android:id="@+id/checkBox3"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
