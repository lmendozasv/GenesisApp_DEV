<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_availability"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.NewItems.AvailabilityActivity"
    tools:showIn="@layout/activity_availability">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bk_gen"
        android:id="@+id/imageView3"
        android:alpha=".5"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:text="Disponibilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView12"
        android:gravity="center"

        android:layout_marginTop="50dip"
        android:textSize="30dip"
        android:background="#90ffffff"
        android:textColor="#194B7E"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <CheckBox
        android:text="   App Minoristas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:textSize="20dip"
        android:layout_marginLeft="50dip"
        android:background="#90ffffff"
        android:id="@+id/appmin"
        android:button="@drawable/chk_selector"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="   App Mayoristas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appmin"
        android:textSize="20dip"
        android:background="#90ffffff"
        android:layout_marginTop="10dip"
        android:layout_alignStart="@+id/appmin"
        android:button="@drawable/chk_selector"
        android:id="@+id/appmax"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="   Web (Tienda en línea)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appmax"
        android:button="@drawable/chk_selector"
        android:textSize="20dip"
        android:background="#90ffffff"
        android:layout_marginTop="10dip"
        android:layout_alignStart="@+id/appmax"
        android:id="@+id/appweb"
        android:layout_alignParentEnd="true" />




    <CheckBox
        android:text="   Sucursal Casa Matríz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appweb"
        android:button="@drawable/chk_selector"
        android:textSize="20dip"
        android:checked="true"
        android:background="#90ffffff"
        android:layout_marginTop="10dip"
        android:layout_alignStart="@+id/appweb"
        android:id="@+id/phys"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
