<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_prices_range"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.NewItems.StatusAndCommentsActivity"
    tools:showIn="@layout/activity_prices_range">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bk_gen"
        android:id="@+id/imageView3"
        android:alpha=".1"

        />


    <TextView
        android:text="Estado y comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:gravity="center"
        android:layout_marginTop="50dip"
        android:textSize="30dip"
        android:background="#90ffffff"
        android:textColor="#194B7E"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#81DAF5"
        android:id="@+id/spinner2"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/txtcomentario"
        android:inputType="textMultiLine"
    android:lines="8"
        android:textSize="15dip"
        android:padding="10dip"
    android:minLines="6"
    android:gravity="top|left"
    android:maxLines="10"
        android:layout_height="wrap_content"
    android:layout_width="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
    android:scrollbars="vertical"
        android:hint="Comentario"
        android:background="@drawable/ic_edittextbk"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner2" />


</RelativeLayout>
