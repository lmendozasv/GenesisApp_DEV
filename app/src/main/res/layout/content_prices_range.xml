<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_prices_range"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sv.devla.genesisapp.AddItemsFunction.StatusPricingActivity"
    tools:showIn="@layout/activity_prices_range">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bk_gen"
        android:id="@+id/imageView3"
        android:alpha=".1"

        />


    <TextView
        android:text="Ingrese los parÃ¡metros de venta en sala de venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="30dip"
        android:background="#906E6E6E"
        android:textColor="#ffffff"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Precio de lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:id="@+id/textView11"
        android:gravity="center"
        android:background="#906E6E6E"
        android:textColor="#ffffff"

        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Aplica para descuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:id="@+id/textView9"
        android:gravity="center"
        android:background="#906E6E6E"
        android:textColor="#ffffff"

        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/tvPRECIO"
        android:textSize="25dip"
        android:paddingLeft="20dip"
        android:gravity="left"
        android:layout_below="@+id/textView11"

        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="14dp"
        android:textOn="Si"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:textOff="No"
        android:id="@+id/toggleButton"
        android:layout_alignEnd="@+id/tvPRECIO"
        android:layout_alignStart="@+id/tvPRECIO" />


    <TextView
        android:text="Estado del producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:id="@+id/textView98"
        android:gravity="center"
        android:background="#906E6E6E"
        android:textColor="#ffffff"

        android:layout_marginTop="34dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView98"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:background="#81DAF5"

        android:id="@+id/spinner2" />

    <TextView
        android:text="%"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton"
        android:textSize="20dip"
        android:id="@+id/txtdes"
        android:layout_alignStart="@+id/toggleButton"
        android:layout_alignEnd="@+id/toggleButton" />

    <TextView
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:layout_alignBottom="@+id/tvPRECIO"
        android:id="@+id/textView13"
        android:gravity="center"
        android:layout_alignTop="@+id/tvPRECIO"
        android:layout_alignStart="@+id/tvPRECIO" />

</RelativeLayout>
